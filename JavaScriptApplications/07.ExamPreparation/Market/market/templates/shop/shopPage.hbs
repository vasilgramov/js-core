<main>
    {{> header}}

    <section id="viewShop">
        <h1>Products</h1>
        <div class="products" id="shopProducts">
            <table>
                <thead>
                <tr>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                    {{# each products}}
                        {{> product}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>

    {{> footer}}
</main>